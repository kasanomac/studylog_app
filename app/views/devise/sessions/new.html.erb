<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name, for: "session_name"  %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", id: 'session_name' %>
  </div>

  <div class="field">
    <%= f.label :password, for: "session_password" %><br />
    <%= f.password_field :password, autocomplete: "current-password", id: 'session_password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, id: 'session_remember_me' %>
      <%= f.label :remember_me, for: "session_remember_me" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-primary', id: 'session_login' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
